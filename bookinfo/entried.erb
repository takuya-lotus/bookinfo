<hr>

<%# 登録対象データを入力するフォームを表示する　アクションはentry %>
<table>
	<tr>
		<th>項目名</th>
		<th>登録データ</th>
	</tr>
	<% ['id','title','author','page','pdate'].each do |name| %>
	<tr>
		<td><%= name %></td>
		<td><%= req.query[name] %></td>
	</tr>
	<% end %>
</table>
<hr>
</body>
</html>